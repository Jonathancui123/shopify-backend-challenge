{
  "name": "shopify-backend-challenge",
  "version": "0.1.0",
  "description": "An image auction platform to support good causes",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jonathancui123/shopify-backend-challenge.git"
  },
  "scripts": {
    "build-ts": "tsc",
    "build": "npm run build-ts && cp -r ./src/public/ ./dist/ && cp -r ./node_modules/ ./dist/",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "node ./server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "@types/mongodb": "3.6.5",
    "async": "^3.2.0",
    "aws-sdk": "^2.902.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.19.0",
    "chai": "^4.3.4",
    "compression": "1.7.4",
    "connect-mongo": "4.4.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "8.2.0",
    "errorhandler": "1.5.1",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "express-validator": "6.9.2",
    "jimp": "^0.16.1",
    "lodash": "4.17.20",
    "lusca": "1.6.1",
    "mongoose": "5.11.15",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "passport": "0.4.1",
    "passport-local": "1.0.0",
    "uuid": "^8.3.2",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.4",
    "@types/async": "^3.2.6",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt-nodejs": "0.0.31",
    "@types/body-parser": "1.19.0",
    "@types/chai": "^4.2.18",
    "@types/compression": "1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/errorhandler": "1.5.0",
    "@types/eslint": "7.2.6",
    "@types/express": "4.17.11",
    "@types/express-session": "1.17.3",
    "@types/express-validator": "^3.0.0",
    "@types/jest": "^26.0.23",
    "@types/jimp": "^0.2.28",
    "@types/lodash": "4.14.168",
    "@types/lusca": "1.6.2",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "14.14.25",
    "@types/passport": "1.0.5",
    "@types/passport-local": "1.0.33",
    "@types/request": "2.48.5",
    "@types/request-promise": "4.1.47",
    "@types/supertest": "2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "eslint": "7.19.0",
    "jest": "26.6.3",
    "nodemon": "2.0.7",
    "supertest": "6.1.3",
    "ts-jest": "26.5.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  }
}
